<% recent_audit_items.each do |recent_audit_item| %>
	<div class="col-md-4">
		<div class="homepage-block">
			<h4>
				<%= recent_audit_item.user.full_name %>
			</h4>
			<p><span class="pending-details">Week starting on:</span> <%= recent_audit_item.start_date %></p>
			<p>
				<span class="pending-details">Confirmed at:</span> 
				<%= recent_audit_item.end_date || status_label('pending') %></p>
			<p>
				<span class="pending-details">Status:</span> 
				<%= status_label recent_audit_item.status %>
			</p>
		</div>
	</div>
<% end %>
<div class="clearfix"></div>
<br>

<div class="text-center">
	<%= link_to "View all Confimation Logs", audit_logs_path, class: "btn btn-primary" %>
</div>

